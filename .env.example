# Protectogram Development Environment Template
# Copy this file to .env.development and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/protectogram_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
SECRET_KEY=generate_a_secure_random_key_here
WEBHOOK_SECRET=generate_another_secure_key
ENVIRONMENT=development

# Telegram Bot Configuration (Development Bot)
# Create a separate bot for development: @BotFather -> /newbot
TELEGRAM_BOT_TOKEN=your_dev_bot_token_here
TELEGRAM_BOT_USERNAME=YourDevBot
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# Twilio Configuration (Test Credentials)
# Use Twilio test credentials, not production
TWILIO_ACCOUNT_SID=test_account_sid_here
TWILIO_AUTH_TOKEN=test_auth_token_here
TWILIO_FROM_NUMBER=+15005550006

# Migration Admin (for local development)
MIGRATION_ADMIN_KEY=local_development_migration_key

# Optional: Error Tracking
# SENTRY_DSN=your_development_sentry_dsn_here
