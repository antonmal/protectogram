# Application Environment
APP_ENV=staging  # staging|prod

# Database
# Use environment variable or CLI argument for database URL
# Examples:
# - ALEMBIC_DATABASE_URL=postgresql://user:pass@host:port/db
# - alembic -x db_url=postgresql://user:pass@host:port/db upgrade head
# For tests: Use Testcontainers (no local DB install required)
POSTGRES_URL=postgresql://user:password@host:port/database

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Telnyx Configuration
TELNYX_API_KEY=your_telnyx_api_key_here
TELNYX_CONNECTION_ID=your_connection_id_here

# Observability
SENTRY_DSN=your_sentry_dsn_here  # Optional

# Feature Flags
FEATURE_PANIC=true

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Call Cascade Defaults
DEFAULT_RING_TIMEOUT_SEC=25
DEFAULT_MAX_RETRIES=2
DEFAULT_RETRY_BACKOFF_SEC=60
DEFAULT_TOTAL_RING_CAP_SEC=180
DEFAULT_REMINDER_INTERVAL_SEC=120
